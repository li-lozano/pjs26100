---
import DashboardLayout from "@layouts/DashboardLayout.astro";
import RequestEnrollmentSideOver from "@components/dashboard/tutor/RequestEnrollmentSideOver.astro";
import type { Student } from "@lib/types/student";
import type { Degree, AcademicPeriod } from "@lib/types/enrollment";
import { getTutorPageData } from "@lib/utils/tutor";

const { user, token } = Astro.locals;

// Redirigir si no es tutor
if (!user || user.role?.name?.toLowerCase() !== "tutor") {
  return Astro.redirect("/dashboard?error=No tienes permisos para acceder a esta secci칩n");
}

const tutorId = user.profile?.documentId;
const { tutorData, degrees, academicPeriods, enrollmentData, error: fetchError } = await getTutorPageData(token as string, tutorId);

const apiError = tutorData?.error;
const displayError = fetchError || apiError;
const students: Student[] = tutorData?.data?.students || [];
const enrollmentsList: Enrollment[] = enrollmentData || [];

const studentCount = students.length;
---

<DashboardLayout pageTitle="Mi Panel">
  <div class="space-y-8 animate-fade-in">
    <!-- Hero Section -->
    <section
      class="relative overflow-hidden rounded-3xl bg-linear-to-br from-rayito-blue to-rayito-sky p-6 md:p-12 text-white shadow-2xl shadow-rayito-blue/20"
    >
      <div class="relative z-10 max-w-2xl">
        <h2 class="text-2xl md:text-4xl font-bold mb-4">
          춰Hola {user?.profile?.names || "Tutor"}! 游녦
        </h2>
        <p class="text-text-on-brand/90 text-lg leading-relaxed">
          Bienvenido a tu portal del tutor. Aqu칤 puedes ver la informaci칩n de
          tus estudiantes y solicitar matr칤culas de forma r치pida y sencilla.
        </p>
      </div>

      <!-- Decorative element -->
      <div
        class="absolute right-0 bottom-0 opacity-20 transform translate-x-1/4 translate-y-1/4"
      >
        <div class="w-64 h-64 bg-white rounded-full blur-3xl"></div>
      </div>
    </section>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div
        class="bg-white/60 backdrop-blur-md rounded-2xl p-6 border border-gray-100 shadow-sm hover:shadow-md transition-shadow group"
      >
        <div class="flex items-center justify-between mb-4">
          <div
            class="w-12 h-12 rounded-xl bg-rayito-yellow flex items-center justify-center text-2xl shadow-inner group-hover:scale-110 transition-transform"
          >
            游놌
          </div>
        </div>
        <p class="text-text-secondary text-sm font-medium">
          Mis Estudiantes
        </p>
        <h3 class="text-2xl font-bold text-text-primary mt-1">
          {studentCount}
        </h3>
      </div>

      <div
        class="bg-white/60 backdrop-blur-md rounded-2xl p-6 border border-gray-100 shadow-sm hover:shadow-md transition-shadow group"
      >
        <div class="flex items-center justify-between mb-4">
          <div
            class="w-12 h-12 rounded-xl bg-rayito-pink flex items-center justify-center text-2xl shadow-inner group-hover:scale-110 transition-transform"
          >
            游닇
          </div>
        </div>
        <p class="text-text-secondary text-sm font-medium">
          Pr칩ximas Acciones
        </p>
        <h3 class="text-2xl font-bold text-text-primary mt-1">-</h3>
      </div>
    </div>

    <!-- Quick Actions -->
    <section
      class="bg-white/40 backdrop-blur-sm rounded-2xl p-6 md:p-8 border border-white/40 shadow-sm"
    >
      <h3 class="text-xl font-bold text-text-primary mb-6 flex items-center">
        <span class="mr-2">游</span> Accesos R치pidos
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a
          href="/dashboard/tutor/mis-estudiantes"
          class="p-6 bg-white rounded-xl border-2 border-gray-100 hover:border-rayito-blue transition-all group flex items-center space-x-4"
        >
          <p class="text-4xl">游놌</p>
          <div>
            <p class="text-lg font-bold text-gray-700 group-hover:text-rayito-blue">
              Ver Mis Estudiantes
            </p>
            <p class="text-sm text-gray-500">Informaci칩n de tus hijos</p>
          </div>
        </a>

        <button
          id="request-enrollment-btn"
          class="p-6 bg-linear-to-r from-rayito-yellow to-rayito-orange rounded-xl border-2 border-transparent hover:scale-105 transition-all group flex items-center space-x-4 text-left shadow-lg hover:shadow-xl"
        >
          <p class="text-4xl">游늶</p>
          <div>
            <p class="text-lg font-bold text-white">
              Solicitar Matr칤cula
            </p>
            <p class="text-sm text-white/80">Registra a tu estudiante</p>
          </div>
        </button>
      </div>
    </section>
  </div>

  <RequestEnrollmentSideOver 
    students={students}
    degrees={degrees}
    academicPeriods={academicPeriods}
    tutorProfileId={user.profile?.documentId || ""}
  />
</DashboardLayout>

<style>
  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  document.getElementById("request-enrollment-btn")?.addEventListener("click", () => {
    const dialog = document.getElementById("tutor-enrollment-sideover") as HTMLDialogElement;
    dialog?.showModal();
  });
</script>

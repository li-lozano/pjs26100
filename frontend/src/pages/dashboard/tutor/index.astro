---
import DashboardLayout from "@layouts/DashboardLayout.astro";
import RequestEnrollmentSideOver from "@components/dashboard/tutor/RequestEnrollmentSideOver.astro";
import type { Student } from "@lib/types/student";
import type { Degree, AcademicPeriod } from "@lib/types/enrollment";
import { getTutorPageData } from "@lib/utils/tutor";

const { user, token } = Astro.locals;

// Redirigir si no es tutor
if (!user || user.role?.name?.toLowerCase() !== "tutor") {
  return Astro.redirect(
    "/dashboard?error=No tienes permisos para acceder a esta secci칩n",
  );
}

const tutorId = user.profile?.documentId;
const {
  tutorData,
  degrees,
  academicPeriods,
  enrollmentData,
  error: fetchError,
} = await getTutorPageData(token as string, tutorId);

const apiError = tutorData?.error;
const displayError = fetchError || apiError;
const students: Student[] = tutorData?.data?.students || [];
const enrollmentsList: Enrollment[] = enrollmentData || [];

const studentCount = students.length;
---

<DashboardLayout pageTitle="Mi Panel">
  <div class="animate-fade-in space-y-8">
    <!-- Hero Section -->
    <section
      class="from-rayito-blue to-rayito-sky shadow-rayito-blue/20 relative overflow-hidden rounded-3xl bg-linear-to-br p-6 text-white shadow-2xl md:p-12"
    >
      <div class="relative z-10 max-w-2xl">
        <h2 class="mb-4 text-2xl font-bold md:text-4xl">
          춰Hola {user?.profile?.names || "Tutor"}! 游녦
        </h2>
        <p class="text-text-on-brand/90 text-lg leading-relaxed">
          Bienvenido a tu portal del tutor. Aqu칤 puedes ver la informaci칩n de
          tus estudiantes y solicitar matr칤culas de forma r치pida y sencilla.
        </p>
      </div>

      <!-- Decorative element -->
      <div
        class="absolute right-0 bottom-0 translate-x-1/4 translate-y-1/4 transform opacity-20"
      >
        <div class="h-64 w-64 rounded-full bg-white blur-3xl"></div>
      </div>
    </section>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      <div
        class="group rounded-2xl border border-gray-100 bg-white/60 p-6 shadow-sm backdrop-blur-md transition-shadow hover:shadow-md"
      >
        <div class="mb-4 flex items-center justify-between">
          <div
            class="bg-rayito-yellow flex h-12 w-12 items-center justify-center rounded-xl text-2xl shadow-inner transition-transform group-hover:scale-110"
          >
            游놌
          </div>
        </div>
        <p class="text-text-secondary text-sm font-medium">Mis Estudiantes</p>
        <h3 class="text-text-primary mt-1 text-2xl font-bold">
          {studentCount}
        </h3>
      </div>

      <div
        class="group rounded-2xl border border-gray-100 bg-white/60 p-6 shadow-sm backdrop-blur-md transition-shadow hover:shadow-md"
      >
        <div class="mb-4 flex items-center justify-between">
          <div
            class="bg-rayito-pink flex h-12 w-12 items-center justify-center rounded-xl text-2xl shadow-inner transition-transform group-hover:scale-110"
          >
            游닇
          </div>
        </div>
        <p class="text-text-secondary text-sm font-medium">Pr칩ximas Acciones</p>
        <h3 class="text-text-primary mt-1 text-2xl font-bold">-</h3>
      </div>
    </div>

    <!-- Quick Actions -->
    <section
      class="rounded-2xl border border-white/40 bg-white/40 p-6 shadow-sm backdrop-blur-sm md:p-8"
    >
      <h3 class="text-text-primary mb-6 flex items-center text-xl font-bold">
        <span class="mr-2">游</span> Accesos R치pidos
      </h3>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        <a
          href="/dashboard/tutor/mis-estudiantes"
          class="hover:border-rayito-blue group flex items-center space-x-4 rounded-xl border-2 border-gray-100 bg-white p-6 transition-all"
        >
          <p class="text-4xl">游놌</p>
          <div>
            <p
              class="group-hover:text-rayito-blue text-lg font-bold text-gray-700"
            >
              Ver Mis Estudiantes
            </p>
            <p class="text-sm text-gray-500">Informaci칩n de tus hijos</p>
          </div>
        </a>

        <button
          id="request-enrollment-btn"
          class="from-rayito-yellow to-rayito-orange group flex items-center space-x-4 rounded-xl border-2 border-transparent bg-linear-to-r p-6 text-left shadow-lg transition-all hover:scale-105 hover:shadow-xl"
        >
          <p class="text-4xl">游늶</p>
          <div>
            <p class="text-lg font-bold text-white">Solicitar Matr칤cula</p>
            <p class="text-sm text-white/80">Registra a tu estudiante</p>
          </div>
        </button>
      </div>
    </section>
  </div>

  <RequestEnrollmentSideOver
    students={students}
    degrees={degrees}
    academicPeriods={academicPeriods}
    tutorProfileId={user.profile?.documentId || ""}
  />
</DashboardLayout>

<style>
  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  document
    .getElementById("request-enrollment-btn")
    ?.addEventListener("click", () => {
      const dialog = document.getElementById(
        "tutor-enrollment-sideover",
      ) as HTMLDialogElement;
      dialog?.showModal();
    });
</script>

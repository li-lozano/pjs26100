---
import DashboardLayout from "@layouts/DashboardLayout.astro";
import ReadTutor from "@lib/services/private/ReadTutor";
import type { Profile } from "@lib/types/user";
import type { StrapiSingleResponse } from "@lib/types/strapi";


const { documentId } = Astro.params;
const { token } = Astro.locals;

let tutor: Profile | null = null;
let error = "";

try {
  const tutorData: StrapiSingleResponse<Profile> = await ReadTutor(
    token as string,
    documentId as string
  );
  tutor = tutorData.data;
} catch (e) {
  error = "No se pudo cargar la información del tutor.";
}
---

<DashboardLayout pageTitle="Detalles del Tutor">
  <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100 animate-fade-in">
    <!-- Header with App Gradient -->
    <div class="bg-linear-to-br from-rayito-blue to-rayito-sky p-6 sm:p-8 text-white flex flex-col sm:flex-row justify-between items-start sm:items-center relative overflow-hidden space-y-6 sm:space-y-0">
      <!-- Decorative background elements -->
      <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -mr-20 -mt-20 blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-rayito-sky/20 rounded-full -ml-10 -mb-10 blur-2xl"></div>

      <div class="relative z-10 flex items-center space-x-4 sm:space-x-6">
        <a
          href="/dashboard/tutores"
          class="w-10 h-10 sm:w-12 sm:h-12 flex items-center justify-center rounded-xl sm:rounded-2xl bg-white/20 hover:bg-white/30 transition-all backdrop-blur-md shrink-0"
          title="Regresar"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
        <div class="min-w-0">
          <h1 class="text-2xl sm:text-3xl font-bold tracking-tight truncate">
            {tutor ? `${tutor.names} ${tutor.surnames}` : "Cargando..."}
          </h1>
          <p class="text-white/80 text-xs sm:text-sm mt-1 font-medium">Visualización detallada del perfil</p>
        </div>
      </div>

      <div class="relative z-10 flex gap-2 sm:gap-3 w-full sm:w-auto">
        <button
          onclick={`if(confirm('¿Estás seguro de que deseas eliminar a este tutor?')) { window.location.href='/dashboard/tutores/delete/${documentId}' }`}
          class="flex-1 sm:flex-none px-4 sm:px-6 py-2.5 sm:py-3 rounded-xl bg-white/10 hover:bg-red-500 hover:scale-105 text-white text-sm sm:text-base font-bold transition-all backdrop-blur-sm border border-white/20"
        >
          Eliminar
        </button>
        <a
          href={`/dashboard/tutores/edit/${documentId}`}
          class="flex-1 sm:flex-none px-4 sm:px-6 py-2.5 sm:py-3 rounded-xl bg-white text-rayito-blue hover:bg-gray-50 hover:scale-105 text-sm sm:text-base font-bold transition-all shadow-lg text-center"
        >
          Modificar
        </a>
      </div>
    </div>

    {
      error ? (
        <div class="p-12 text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-50 text-red-500 mb-4 font-bold text-2xl">!</div>
          <p class="text-gray-600 font-medium">{error}</p>
          <a href="/dashboard/tutores" class="mt-6 inline-block text-rayito-blue font-bold hover:underline">Regresar a la lista</a>
        </div>
      ) : tutor ? (
        <div class="p-8 md:p-10 space-y-10">
          <!-- Information Grid mimicking the Form Style -->
          <div class="space-y-6">
            <h4 class="text-sm font-black text-rayito-blue uppercase tracking-widest border-b border-gray-50 pb-2 flex items-center gap-2">
              <span class="w-2 h-2 rounded-full bg-rayito-blue"></span>
              Información Personal
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-1.5">
                <label class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1">Nombres</label>
                <div class="w-full px-5 py-4 rounded-2xl border border-gray-100 bg-gray-50/50 text-gray-800 font-medium text-lg">
                  {tutor.names}
                </div>
              </div>
              <div class="space-y-1.5">
                <label class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1">Apellidos</label>
                <div class="w-full px-5 py-4 rounded-2xl border border-gray-100 bg-gray-50/50 text-gray-800 font-medium text-lg">
                  {tutor.surnames}
                </div>
              </div>
              <div class="space-y-1.5">
                <label class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1">DNI / Documento</label>
                <div class="w-full px-5 py-4 rounded-2xl border border-gray-100 bg-gray-50/50 text-gray-800 font-mono text-lg">
                  {tutor.dni}
                </div>
              </div>
              <div class="space-y-1.5">
                <label class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1">Teléfono / Celular</label>
                <div class="w-full px-5 py-4 rounded-2xl border border-gray-100 bg-gray-50/50 text-gray-800 font-medium text-lg">
                  {tutor.cell_phone || "No registrado"}
                </div>
              </div>
            </div>
          </div>

          <!-- Associated Students Section -->
          <div class="space-y-6">
            <h4 class="text-sm font-black text-rayito-blue uppercase tracking-widest border-b border-gray-50 pb-2 flex items-center justify-between">
              <div class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-rayito-blue"></span>
                Estudiantes Asociados
              </div>
              <span class="bg-rayito-blue/10 text-rayito-blue px-3 py-1 rounded-full text-xs font-bold">
                {tutor.students?.length || 0} TOTAL
              </span>
            </h4>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {tutor.students && tutor.students.length > 0 ? (
                tutor.students.map((student) => (
                  <a 
                    href={`/dashboard/estudiantes/${student.documentId}`}
                    class="group flex items-center p-4 rounded-2xl border border-gray-100 bg-white hover:border-rayito-blue/30 hover:shadow-md transition-all"
                  >
                    <div class="w-12 h-12 rounded-xl bg-linear-to-br from-rayito-blue/10 to-rayito-sky/10 flex items-center justify-center text-rayito-blue font-black text-lg mr-4 group-hover:from-rayito-blue group-hover:to-rayito-sky group-hover:text-white transition-all">
                      {student.names[0]}{student.surnames[0]}
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-bold text-gray-900 truncate group-hover:text-rayito-blue transition-colors">
                        {student.names} {student.surnames}
                      </p>
                      <p class="text-xs text-gray-400 font-medium mt-0.5">ESTUDIANTE</p>
                    </div>
                    <div class="text-gray-300 group-hover:text-rayito-blue group-hover:translate-x-1 transition-all">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                      </svg>
                    </div>
                  </a>
                ))
              ) : (
                <div class="col-span-full p-10 rounded-2xl border-2 border-dashed border-gray-100 text-center">
                  <p class="text-gray-400 font-medium">No tiene alumnos asociados actualmente.</p>
                </div>
              )}
            </div>
          </div>

          <!-- Footer/Action Row -->
          <div class="pt-8 border-t border-gray-50 flex flex-col sm:flex-row gap-4">
            <a
              href="/dashboard/tutores"
              class="flex-1 px-8 py-4 rounded-2xl border border-gray-200 text-gray-600 font-bold hover:bg-gray-50 transition-all text-center"
            >
              Cerrar y Volver
            </a>
            <button
               class="flex-2 px-8 py-4 rounded-2xl bg-gray-900 text-white font-bold hover:bg-gray-800 transition-all shadow-xl shadow-gray-200 text-center"
            >
              Descargar Ficha PDF
            </button>
          </div>
        </div>
      ) : null
    }
  </div>
</DashboardLayout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fadeIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
</style>

---
import WebLayout from "@layouts/WebLayout.astro";
import LoginForm from "@components/auth/LoginForm.astro";
import { Image } from "astro:assets";
import logo from "@assets/Logo_RDL.png";
---

<WebLayout pageTitle="Iniciar SesiÃ³n">
  <main
    class="relative flex min-h-screen items-center justify-center overflow-hidden bg-gray-50"
  >
    <!-- Animated background gradients -->
    <div
      class="bg-rayito-blue/5 animate-blob absolute top-0 -left-4 h-96 w-96 rounded-full opacity-70 mix-blend-multiply blur-3xl filter"
    >
    </div>
    <div
      class="bg-rayito-yellow/5 animate-blob animation-delay-2000 absolute top-0 -right-4 h-96 w-96 rounded-full opacity-70 mix-blend-multiply blur-3xl filter"
    >
    </div>
    <div
      class="bg-rayito-pink/5 animate-blob animation-delay-4000 absolute -bottom-8 left-20 h-96 w-96 rounded-full opacity-70 mix-blend-multiply blur-3xl filter"
    >
    </div>

    <div class="relative flex w-full flex-col items-center px-4">
      <!-- Logo -->
      <div class="animate-fade-in mb-8">
        <Image
          src={logo}
          alt="Logo Rayito de Luz"
          class="h-auto w-48 drop-shadow-lg transition-transform duration-300 hover:scale-105"
        />
      </div>

      <LoginForm />

      <footer class="mt-12 text-center text-xs text-gray-400">
        &copy; {new Date().getFullYear()} - Rayito de Luz. <br />
        Todos los derechos reservados.
      </footer>
    </div>
  </main>
</WebLayout>

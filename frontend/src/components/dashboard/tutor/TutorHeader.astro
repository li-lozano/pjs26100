---
interface Props {
  title: string;
  description?: string;
  showActionButton?: boolean;
  actionButtonText?: string;
  actionButtonId?: string;
  showSecondaryButton?: boolean;
  secondaryButtonText?: string;
  secondaryButtonId?: string;
}

const {
  title,
  description,
  showActionButton = false,
  actionButtonText = "Acción",
  actionButtonId = "action-btn",
  showSecondaryButton = false,
  secondaryButtonText = "Acción Secundaria",
  secondaryButtonId = "secondary-btn",
} = Astro.props;
---

<div
  class="mb-8 flex w-full flex-col gap-4 md:flex-row md:items-center md:justify-between"
>
  <div class="min-w-0 flex-1">
    <h1
      class="from-rayito-blue to-rayito-sky mb-2 bg-linear-to-r bg-clip-text text-3xl font-bold text-transparent"
    >
      {title}
    </h1>
    {
      description && (
        <p class="text-text-secondary text-sm md:text-base">{description}</p>
      )
    }
  </div>

  {
    (showActionButton || showSecondaryButton) && (
      <div class="flex shrink-0 flex-col gap-3 sm:flex-row">
        {showSecondaryButton && (
          <button
            id={secondaryButtonId}
            class="text-rayito-blue border-rayito-blue hover:bg-rayito-blue transform rounded-xl border-2 bg-white px-6 py-3 font-bold whitespace-nowrap shadow-sm transition-all hover:scale-105 hover:text-white"
          >
            <span class="mr-2">➕</span>
            {secondaryButtonText}
          </button>
        )}
        {showActionButton && (
          <button
            id={actionButtonId}
            class="from-rayito-yellow to-rayito-orange transform rounded-xl bg-linear-to-r px-6 py-3 font-bold whitespace-nowrap text-white shadow-md transition-all hover:scale-105 hover:shadow-lg"
          >
            <span class="mr-2">✨</span>
            {actionButtonText}
          </button>
        )}
      </div>
    )
  }
</div>

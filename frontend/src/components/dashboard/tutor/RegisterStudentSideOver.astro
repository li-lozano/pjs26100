---
interface Props {
  tutorProfileId: string;
}

const { tutorProfileId } = Astro.props;
---

<dialog
  id="register-student-sideover"
  class="fixed inset-y-0 right-0 m-0 h-screen w-full max-w-lg translate-x-full overflow-hidden border-none bg-white p-0 shadow-2xl transition-all duration-300 ease-in-out backdrop:backdrop-blur-sm open:translate-x-0"
>
  <style>
    dialog#register-student-sideover {
      display: flex;
      flex-direction: column;
      margin-right: 0;
      margin-left: auto;
      max-height: none;
      height: 100dvh;
    }

    dialog::backdrop {
      background-color: rgba(0, 0, 0, 0);
      transition: all 0.3s allow-discrete;
    }

    dialog[open]::backdrop {
      background-color: rgba(0, 0, 0, 0.4);
    }

    @starting-style {
      dialog[open] {
        transform: translateX(100%);
      }
      dialog[open]::backdrop {
        background-color: rgba(0, 0, 0, 0);
      }
    }
  </style>

  <div
    class="from-rayito-yellow to-rayito-orange flex shrink-0 items-center justify-between bg-linear-to-br p-8 text-white"
  >
    <div>
      <h3 class="text-2xl font-bold">Registrar Nuevo Hijo</h3>
      <p class="mt-1 text-sm text-white/90">
        Completa la información de tu hijo/a
      </p>
    </div>
    <button
      onclick="document.getElementById('register-student-sideover').close()"
      class="flex h-10 w-10 items-center justify-center rounded-full text-2xl transition-colors hover:bg-white/10"
      aria-label="Cerrar"
    >
      ×
    </button>
  </div>

  <form
    method="POST"
    action="/api/v1/core/POST/estudiantes"
    class="flex-1 space-y-6 overflow-y-auto bg-white p-8"
  >
    <!-- Hidden fields -->
    <input type="hidden" name="profile" value={tutorProfileId} />
    <input type="hidden" name="student_status" value="Pendiente" />

    <div class="space-y-4">
      <h4
        class="text-rayito-orange border-b border-gray-50 pb-2 text-sm font-bold tracking-widest uppercase"
      >
        Información Personal
      </h4>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >
            Nombres <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            name="names"
            required
            class="focus:ring-rayito-orange/20 focus:border-rayito-orange w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
            placeholder="Ej: Ana Maria"
          />
        </div>
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >
            Apellidos <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            name="surnames"
            required
            class="focus:ring-rayito-orange/20 focus:border-rayito-orange w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
            placeholder="Ej: García López"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >
            DNI <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            name="dni"
            required
            maxlength="8"
            class="focus:ring-rayito-orange/20 focus:border-rayito-orange w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
            placeholder="8 dígitos"
          />
        </div>
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >
            F. Nacimiento <span class="text-red-500">*</span>
          </label>
          <input
            type="date"
            name="birthday"
            required
            class="focus:ring-rayito-orange/20 focus:border-rayito-orange w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >
            Género <span class="text-red-500">*</span>
          </label>
          <select
            name="gender"
            required
            class="focus:ring-rayito-orange/20 focus:border-rayito-orange w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
          >
            <option value="" disabled selected>Seleccionar</option>
            <option value="Masculino">Masculino</option>
            <option value="Femenino">Femenino</option>
            <option value="Otro">Otro</option>
          </select>
        </div>
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >
            Dirección <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            name="address"
            required
            class="focus:ring-rayito-orange/20 focus:border-rayito-orange w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
            placeholder="Ej: Av. Las Flores 123"
          />
        </div>
      </div>

      <!-- Info Box -->
      <div class="rounded-xl border border-blue-200 bg-blue-50 p-4">
        <div class="flex items-start space-x-2">
          <span class="text-xl text-blue-600">ℹ️</span>
          <div class="text-sm text-blue-800">
            <p class="mb-1 font-medium">Información importante:</p>
            <ul class="list-inside list-disc space-y-0.5 text-xs">
              <li>El estudiante será registrado con estado "Pendiente"</li>
              <li>Un administrador debe aprobar el registro</li>
              <li>Solo podrás solicitar matrículas para estudiantes activos</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div
      class="sticky bottom-0 flex gap-4 border-t border-gray-50 bg-white pt-8"
    >
      <button
        type="button"
        onclick="document.getElementById('register-student-sideover').close()"
        class="flex-1 rounded-xl border border-gray-200 px-6 py-3.5 font-bold text-gray-600 transition-all hover:bg-gray-50"
      >
        Cancelar
      </button>
      <button
        type="submit"
        class="from-rayito-yellow to-rayito-orange flex-2 rounded-xl bg-linear-to-r px-6 py-3.5 font-bold text-white shadow-md transition-all hover:shadow-lg"
      >
        Registrar Estudiante
      </button>
    </div>
  </form>
</dialog>

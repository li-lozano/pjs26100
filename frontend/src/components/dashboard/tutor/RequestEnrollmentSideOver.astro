---
import type { Student } from "@lib/types/student";
import type { Enrollment } from "@lib/types/enrollment";
import type { Degree, AcademicPeriod } from "@lib/types/enrollment";

interface Props {
  students: Student[];
  enrollmentsList: Enrollment[];
  degrees: Degree[];
  academicPeriods: AcademicPeriod[];
  tutorProfileId: string;
}

const {
  students: propStudents,
  degrees: propDegrees,
  academicPeriods: propAcademicPeriods,
  tutorProfileId,
  enrollmentsList: propEnrollmentsList,
} = Astro.props;

const students = propStudents || [];
const degrees = propDegrees || [];
const academicPeriods = propAcademicPeriods || [];
const enrollmentsList = propEnrollmentsList || [];

const currentPeriod = academicPeriods.find((p) => p.active);

const availableStudents = students.filter((student) => {
  const hasEnrollmentInCurrentPeriod = enrollmentsList.some(
    (enrollment) =>
      enrollment.student?.documentId === student.documentId &&
      enrollment.academic_period?.documentId === currentPeriod?.documentId,
  );
  return !hasEnrollmentInCurrentPeriod;
});

const enrollment_date = new Date().toISOString().slice(0, 16);
---

<dialog
  id="tutor-enrollment-sideover"
  class="fixed inset-y-0 right-0 m-0 h-screen w-full max-w-lg translate-x-full overflow-hidden border-none bg-white p-0 shadow-2xl transition-all duration-300 ease-in-out backdrop:backdrop-blur-sm open:translate-x-0"
>
  <style>
    dialog#tutor-enrollment-sideover {
      display: flex;
      flex-direction: column;
      margin-right: 0;
      margin-left: auto;
      max-height: none;
      height: 100dvh;
    }

    dialog::backdrop {
      background-color: rgba(0, 0, 0, 0);
      transition: all 0.3s allow-discrete;
    }

    dialog[open]::backdrop {
      background-color: rgba(0, 0, 0, 0.4);
    }

    @starting-style {
      dialog[open] {
        transform: translateX(100%);
      }
      dialog[open]::backdrop {
        background-color: rgba(0, 0, 0, 0);
      }
    }
  </style>

  <div
    class="from-rayito-yellow to-rayito-orange flex shrink-0 items-center justify-between bg-linear-to-br p-8 text-white"
  >
    <div>
      <h3 class="text-2xl font-bold">Solicitar Matrícula</h3>
      <p class="mt-1 text-sm text-white/90">
        Registra a tu hijo para el próximo período académico
      </p>
    </div>
    <button
      onclick="document.getElementById('tutor-enrollment-sideover').close()"
      class="flex h-10 w-10 items-center justify-center rounded-full text-2xl transition-colors hover:bg-white/10"
      aria-label="Cerrar"
    >
      ×
    </button>
  </div>

  <form
    method="POST"
    action="/api/v1/core/matriculas"
    enctype="multipart/form-data"
    class="flex-1 space-y-6 overflow-y-auto bg-white p-8"
  >
    <!-- Hidden field: Status (always "Pendiente de Revisión" for tutors) -->
    <input type="hidden" name="enrollment_status" value="Pendiente" />
    <input type="hidden" name="enrollment_date" value={enrollment_date} />

    <div class="space-y-4">
      <h4
        class="text-rayito-orange border-b border-gray-50 pb-2 text-sm font-bold tracking-widest uppercase"
      >
        Datos de la Matrícula
      </h4>
      <!-- Estudiante Selection -->
      <div class="space-y-1.5">
        <label
          class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
        >
          Estudiante <span class="text-red-500">*</span>
        </label>
        <select
          name="student"
          required
          class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full appearance-none rounded-xl border border-gray-100 bg-gray-50 bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20fill%3D%22none%22%20viewBox%3D%220%200%2020%2020%22%3E%3Cpath%20stroke%3D%22%236b7280%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%20stroke-width%3D%221.5%22%20d%3D%22m6%208%204%204%204-4%22%2F%3E%3C%2Fsvg%3E')] bg-size-[1.25rem_1.25rem] bg-position-[right_0.5rem_center] bg-no-repeat px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
        >
          <option value="" disabled selected>Selecciona tu hijo/a</option>
          {
            availableStudents.map((student) => (
              <option value={student.documentId}>
                {student.names} {student.surnames}
              </option>
            ))
          }
        </select>
        {
          availableStudents.length === 0 && (
            <p class="mt-1 ml-1 text-xs text-yellow-600">
              ⚠️ No tienes estudiantes activos. Espera la aprobación del
              administrador.
            </p>
          )
        }
      </div>

      <div class="grid grid-cols-1 gap-4">
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >
            Grado y Sección <span class="text-red-500">*</span>
          </label>
          <select
            name="degree"
            required
            class="focus:ring-rayito-orange/20 focus:border-rayito-orange w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
          >
            <option value="" disabled selected>Selecciona grado</option>
            {
              degrees.map((degree) => (
                <option value={degree.documentId}>
                  {degree.name} - {degree.section}
                </option>
              ))
            }
          </select>
        </div>

        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >
            Período Académico <span class="text-red-500">*</span>
          </label>
          <select
            name="academic_period"
            required
            class="focus:ring-rayito-orange/20 focus:border-rayito-orange w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
          >
            <option value="" disabled>Selecciona período</option>
            {
              academicPeriods.map((period) => (
                <option value={period.documentId} selected={period.active}>
                  {period.name} {period.active ? "(Actual)" : ""}
                </option>
              ))
            }
          </select>
        </div>
      </div>

      <div class="space-y-1.5">
        <label
          class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
        >
          Observaciones
        </label>
        <textarea
          name="observations"
          rows="3"
          class="focus:ring-rayito-orange/20 focus:border-rayito-orange w-full resize-none rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
          placeholder="¿Algo que debamos saber? (opcional)"></textarea>
      </div>

      <!-- Info Box -->
      <div class="rounded-xl border border-blue-200 bg-blue-50 p-4">
        <div class="flex items-start space-x-2">
          <span class="text-xl text-blue-600">ℹ️</span>
          <div class="text-sm text-blue-800">
            <p class="mb-1 font-medium">Información importante:</p>
            <ul class="list-inside list-disc space-y-0.5 text-xs">
              <li>Tu solicitud será revisada por la administración</li>
              <li>Recibirás una notificación cuando sea aprobada</li>
              <li>El estado inicial será "Pendiente de Revisión"</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div
      class="sticky bottom-0 flex gap-4 border-t border-gray-50 bg-white pt-8"
    >
      <button
        type="button"
        onclick="document.getElementById('tutor-enrollment-sideover').close()"
        class="flex-1 rounded-xl border border-gray-200 px-6 py-3.5 font-bold text-gray-600 transition-all hover:bg-gray-50"
      >
        Cancelar
      </button>
      <button
        type="submit"
        class="from-rayito-yellow to-rayito-orange flex-2 rounded-xl bg-linear-to-r px-6 py-3.5 font-bold text-white shadow-md transition-all hover:shadow-lg"
      >
        Enviar Solicitud
      </button>
    </div>
  </form>
</dialog>

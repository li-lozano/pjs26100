---
import type { Student } from "@lib/types/student";
import type { Enrollment } from "@lib/types/enrollment";
import type { Degree, AcademicPeriod } from "@lib/types/enrollment";

interface Props {
  students: Student[];
  enrollmentsList: Enrollment[];
  degrees: Degree[];
  academicPeriods: AcademicPeriod[];
  tutorProfileId: string;
}

const {
  students: propStudents,
  degrees: propDegrees,
  academicPeriods: propAcademicPeriods,
  tutorProfileId,
  enrollmentsList: propEnrollmentsList,
} = Astro.props;

const students = propStudents || [];
const degrees = propDegrees || [];
const academicPeriods = propAcademicPeriods || [];
const enrollmentsList = propEnrollmentsList || [];

const currentPeriod = academicPeriods.find((p) => p.active);

const availableStudents = students.filter((student) => {
  const hasEnrollmentInCurrentPeriod = enrollmentsList.some(
    (enrollment) =>
      enrollment.student?.documentId === student.documentId &&
      enrollment.academic_period?.documentId === currentPeriod?.documentId
  );
  return !hasEnrollmentInCurrentPeriod;
});

const enrollment_date = new Date().toISOString().slice(0, 16);
---

<dialog
  id="tutor-enrollment-sideover"
  class="fixed inset-y-0 right-0 h-screen w-full max-w-lg m-0 p-0 border-none shadow-2xl backdrop:backdrop-blur-sm overflow-hidden transition-all duration-300 ease-in-out translate-x-full open:translate-x-0 bg-white"
>
  <style>
    dialog#tutor-enrollment-sideover {
      display: flex;
      flex-direction: column;
      margin-right: 0;
      margin-left: auto;
      max-height: none;
      height: 100dvh;
    }

    dialog::backdrop {
      background-color: rgba(0, 0, 0, 0);
      transition: all 0.3s allow-discrete;
    }

    dialog[open]::backdrop {
      background-color: rgba(0, 0, 0, 0.4);
    }

    @starting-style {
      dialog[open] {
        transform: translateX(100%);
      }
      dialog[open]::backdrop {
        background-color: rgba(0, 0, 0, 0);
      }
    }
  </style>

  <div
    class="bg-linear-to-br from-rayito-yellow to-rayito-orange p-8 text-white flex justify-between items-center shrink-0"
  >
    <div>
      <h3 class="text-2xl font-bold">Solicitar Matrícula</h3>
      <p class="text-white/90 text-sm mt-1">
        Registra a tu hijo para el próximo período académico
      </p>
    </div>
    <button
      onclick="document.getElementById('tutor-enrollment-sideover').close()"
      class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-white/10 transition-colors text-2xl"
      aria-label="Cerrar"
    >
      ×
    </button>
  </div>

  <form
    method="POST"
    action="/api/v1/core/matriculas"
    enctype="multipart/form-data"
    class="flex-1 overflow-y-auto p-8 space-y-6 bg-white"
  >     
    <!-- Hidden field: Status (always "Pendiente de Revisión" for tutors) -->
    <input type="hidden" name="enrollment_status" value="Pendiente" />
    <input type="hidden" name="enrollment_date" value={enrollment_date} />

    <div class="space-y-4">
      <h4
        class="text-sm font-bold text-rayito-orange uppercase tracking-widest border-b border-gray-50 pb-2"
      >
        Datos de la Matrícula
      </h4>
      <!-- Estudiante Selection -->
      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
        >
          Estudiante <span class="text-red-500">*</span>
        </label>
        <select
          name="student"
          required
          class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800 appearance-none bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20fill%3D%22none%22%20viewBox%3D%220%200%2020%2020%22%3E%3Cpath%20stroke%3D%22%236b7280%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%20stroke-width%3D%221.5%22%20d%3D%22m6%208%204%204%204-4%22%2F%3E%3C%2Fsvg%3E')] bg-size-[1.25rem_1.25rem] bg-position-[right_0.5rem_center] bg-no-repeat"
        >
          <option value="" disabled selected>Selecciona tu hijo/a</option>
          {availableStudents.map((student) => (
              <option value={student.documentId}>
                {student.names} {student.surnames}
              </option>
            ))}
        </select>
        {availableStudents.length === 0 && (
          <p class="text-xs text-yellow-600 ml-1 mt-1">
            ⚠️ No tienes estudiantes activos. Espera la aprobación del administrador.
          </p>
        )}
      </div>

      <div class="grid grid-cols-1 gap-4">
        <div class="space-y-1.5">
          <label
            class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
          >
            Grado y Sección <span class="text-red-500">*</span>
          </label>
          <select
            name="degree"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-orange/20 focus:border-rayito-orange transition-all outline-none text-gray-800"
          >
            <option value="" disabled selected>Selecciona grado</option>
            {
              degrees.map((degree) => (
                <option value={degree.documentId}>
                  {degree.name} - {degree.section}
                </option>
              ))
            }
          </select>
        </div>

        <div class="space-y-1.5">
          <label
            class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
          >
            Período Académico <span class="text-red-500">*</span>
          </label>
          <select
            name="academic_period"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-orange/20 focus:border-rayito-orange transition-all outline-none text-gray-800"
          >
            <option value="" disabled>Selecciona período</option>
            {
              academicPeriods.map((period) => (
                <option value={period.documentId} selected={period.active}>
                  {period.name} {period.active ? "(Actual)" : ""}
                </option>
              ))
            }
          </select>
        </div>
      </div>

      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
        >
          Observaciones
        </label>
        <textarea
          name="observations"
          rows="3"
          class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-orange/20 focus:border-rayito-orange transition-all outline-none text-gray-800 resize-none"
          placeholder="¿Algo que debamos saber? (opcional)"
        ></textarea>
      </div>

      <!-- Info Box -->
      <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
        <div class="flex items-start space-x-2">
          <span class="text-blue-600 text-xl">ℹ️</span>
          <div class="text-sm text-blue-800">
            <p class="font-medium mb-1">Información importante:</p>
            <ul class="list-disc list-inside space-y-0.5 text-xs">
              <li>Tu solicitud será revisada por la administración</li>
              <li>Recibirás una notificación cuando sea aprobada</li>
              <li>El estado inicial será "Pendiente de Revisión"</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div
      class="pt-8 border-t border-gray-50 flex gap-4 sticky bottom-0 bg-white"
    >
      <button
        type="button"
        onclick="document.getElementById('tutor-enrollment-sideover').close()"
        class="flex-1 px-6 py-3.5 rounded-xl border border-gray-200 text-gray-600 font-bold hover:bg-gray-50 transition-all"
      >
        Cancelar
      </button>
      <button
        type="submit"
        class="flex-2 px-6 py-3.5 rounded-xl bg-linear-to-r from-rayito-yellow to-rayito-orange text-white font-bold hover:shadow-lg transition-all shadow-md"
      >
        Enviar Solicitud
      </button>
    </div>
  </form>
</dialog>

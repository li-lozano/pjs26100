---
import type { Student } from "@lib/types/student";
import { getStudentStatusConfig } from "@lib/utils/studentStatus";

interface Props {
  status: Student['student_status'];
}

const { status } = Astro.props;

const currentStatus = getStudentStatusConfig(status);
---

{currentStatus && (
  <div class="mt-3">
    <span class={`inline-block px-3 py-1 ${currentStatus.bgIndex} ${currentStatus.textIndex} rounded-lg text-xs font-medium`}>
      {currentStatus.label}
    </span>
  </div>
)}

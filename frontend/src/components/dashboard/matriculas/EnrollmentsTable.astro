---
import type { Enrollment } from "@lib/types/enrollment";

interface Props {
  enrollments: Enrollment[];
  error?: string;
}

const { enrollments, error } = Astro.props;

const getStatusStyles = (status: string) => {
  switch (status) {
    case "Aprobado":
      return "bg-green-100 text-green-700 border-green-200";
    case "Pendiente":
      return "bg-amber-100 text-amber-700 border-amber-200";
    case "Rechazado":
      return "bg-red-100 text-red-700 border-red-200";
    case "Pagado":
      return "bg-blue-100 text-blue-700 border-blue-200";
    default:
      return "bg-gray-100 text-gray-700 border-gray-200";
  }
};
---

<div
  class="bg-white/40 backdrop-blur-sm rounded-2xl border border-white/40 shadow-sm overflow-hidden"
>
  {
    error && (
      <div class="p-8 text-center bg-red-50/50">
        <p class="text-red-500 font-medium">‚ö†Ô∏è {error}</p>
      </div>
    )
  }

  {
    !error && enrollments.length === 0 ? (
      <div class="p-16 text-center">
        <div class="w-20 h-20 bg-rayito-blue/10 rounded-full flex items-center justify-center mx-auto mb-4 text-4xl">
          üìù
        </div>
        <h3 class="text-lg font-bold text-gray-800">
          No hay matr√≠culas registradas
        </h3>
        <p class="text-gray-500 max-w-xs mx-auto mt-2 text-sm leading-relaxed">
          Comienza por registrar la primera matr√≠cula de un estudiante.
        </p>
      </div>
    ) : (
      !error && (
        <div class="overflow-x-auto">
          <table class="w-full text-left border-collapse">
            <thead>
              <tr class="bg-gray-50/50 border-b border-gray-100">
                <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">
                  Estudiante
                </th>
                <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">
                  Grado y Secci√≥n
                </th>
                <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider border-l border-gray-100/50">
                  Per√≠odo
                </th>
                <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">
                  Estado
                </th>
                <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">
                  Acciones
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-50">
              {enrollments.map((enrollment) => (
                <tr class="hover:bg-white/60 transition-colors group">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class="w-10 h-10 rounded-full bg-rayito-blue/10 flex items-center justify-center text-rayito-blue font-bold text-sm">
                        {enrollment.student?.names.charAt(0)}
                        {enrollment.student?.surnames.charAt(0)}
                      </div>
                      <div>
                        <div class="text-sm font-bold text-gray-800">
                          {enrollment.student?.names}{" "}
                          {enrollment.student?.surnames}
                        </div>
                        <div class="text-xs text-gray-500">
                          DNI: {enrollment.student?.dni}
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-700">
                      {enrollment.degree?.name}
                    </div>
                    <div class="text-xs text-gray-400 font-medium uppercase tracking-tight">
                      Secci√≥n: {enrollment.degree?.section}
                    </div>
                  </td>
                  <td class="px-6 py-4 border-l border-gray-50">
                    <span class="text-sm font-bold text-gray-600 bg-gray-100/80 px-2 py-1 rounded-md">
                      {enrollment.academic_period?.name}
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <span
                      class={`px-3 py-1 text-xs font-bold rounded-full border ${getStatusStyles(enrollment.enrollment_status)}`}
                    >
                      {enrollment.enrollment_status}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <button class="text-gray-400 hover:text-rayito-blue transition-colors font-bold text-sm">
                      Detalles
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )
    )
  }
</div>

<style>
  /* Custom scrollbar for table */
  .overflow-x-auto::-webkit-scrollbar {
    height: 6px;
  }
  .overflow-x-auto::-webkit-scrollbar-track {
    background: transparent;
  }
  .overflow-x-auto::-webkit-scrollbar-thumb {
    background: #e5e7eb;
    border-radius: 10px;
  }
  .overflow-x-auto::-webkit-scrollbar-thumb:hover {
    background: #d1d5db;
  }
</style>

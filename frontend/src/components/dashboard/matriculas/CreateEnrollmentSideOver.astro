---
import type { Student } from "@lib/types/student";
import type { Degree, AcademicPeriod } from "@lib/types/enrollment";

interface Props {
  students: Student[];
  degrees: Degree[];
  academicPeriods: AcademicPeriod[];  
}

const { students, degrees, academicPeriods } = Astro.props;
---

<dialog
  id="enrollment-sideover"
  class="fixed inset-y-0 right-0 h-screen w-full max-w-lg m-0 p-0 border-none shadow-2xl backdrop:backdrop-blur-sm overflow-hidden transition-all duration-300 ease-in-out translate-x-full open:translate-x-0 bg-white"
>
  <style>
    dialog#enrollment-sideover {
      display: flex;
      flex-direction: column;
      margin-right: 0;
      margin-left: auto;
      max-height: none;
      height: 100dvh;
    }

    dialog::backdrop {
      background-color: rgba(0, 0, 0, 0);
      transition: all 0.3s allow-discrete;
    }

    dialog[open]::backdrop {
      background-color: rgba(0, 0, 0, 0.4);
    }

    @starting-style {
      dialog[open] {
        transform: translateX(100%);
      }
      dialog[open]::backdrop {
        background-color: rgba(0, 0, 0, 0);
      }
    }
  </style>

  <div
    class="bg-linear-to-br from-rayito-blue to-rayito-sky p-8 text-white flex justify-between items-center shrink-0"
  >
    <div>
      <h3 class="text-2xl font-bold">Registrar Nueva Matrícula</h3>
      <p class="text-white/80 text-sm mt-1">
        Asigna un estudiante a un grado y período académico
      </p>
    </div>
    <button
      onclick="document.getElementById('enrollment-sideover').close()"
      class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-white/10 transition-colors text-2xl"
      aria-label="Cerrar"
    >
      ×
    </button>
  </div>

  <form
    method="POST"
    action="/api/v1/core/POST/matriculas"
    enctype="multipart/form-data"
    class="flex-1 overflow-y-auto p-8 space-y-6 bg-white"
  >
    <div class="space-y-4">
      <h4
        class="text-sm font-bold text-rayito-blue uppercase tracking-widest border-b border-gray-50 pb-2"
      >
        Datos de la Matrícula
      </h4>

      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
        >
          Estudiante
        </label>
        <select
          name="student"
          required
          class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
        >
          <option value="" disabled selected>Selecciona un estudiante</option>
          {
            students.map((student) => (
              <option value={student.documentId}>
                {student.names} {student.surnames} ({student.dni})
              </option>
            ))
          }
        </select>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="space-y-1.5">
          <label
            class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
          >
            Grado y Sección
          </label>
          <select
            name="degree"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
          >
            <option value="" disabled selected>Selecciona grado</option>
            {
              degrees.map((degree) => (
                <option value={degree.documentId}>
                  {degree.name} - {degree.section}
                </option>
              ))
            }
          </select>
        </div>

        <div class="space-y-1.5">
          <label
            class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
          >
            Período Académico
          </label>
          <select
            name="academic_period"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
          >
            <option value="" disabled selected>Selecciona período</option>
            {
              academicPeriods.map((period) => (
                <option value={period.documentId} selected={period.active}>
                  {period.name} {period.active ? "(Actual)" : ""}
                </option>
              ))
            }
          </select>
        </div>
      </div>

      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
        >
          Estado Inicial
        </label>
        <select
          name="enrollment_status"
          required
          class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
        >
          <option value="Pendiente" selected>Pendiente</option>
          <option value="Aprobado">Aprobado</option>
          <option value="Rechazado">Rechazado</option>
          <option value="Pagado">Pagado</option>
        </select>
      </div>

      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
        >
          Fecha de Matrícula
        </label>
        <input
          type="datetime-local"
          name="enrollment_date"
          required
          class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
        />
      </div>

      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
        >
          Observaciones
        </label>
        <textarea
          name="observations"
          rows="3"
          class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800 resize-none"
          placeholder="Notas adicionales sobre el proceso..."
        ></textarea>
      </div>
               
    </div>

    <div
      class="pt-8 border-t border-gray-50 flex gap-4 sticky bottom-0 bg-white"
    >
      <button
        type="button"
        onclick="document.getElementById('enrollment-sideover').close()"
        class="flex-1 px-6 py-3.5 rounded-xl border border-gray-200 text-gray-600 font-bold hover:bg-gray-50 transition-all"
      >
        Cancelar
      </button>
      <button
        type="submit"
        class="flex-2 px-6 py-3.5 rounded-xl bg-rayito-blue text-white font-bold hover:bg-rayito-sky transition-all shadow-lg shadow-rayito-blue/20"
      >
        Registrar Matrícula
      </button>
    </div>
  </form>
</dialog>

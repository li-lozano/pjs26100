---
import type { Student } from "@lib/types/student";
import type { Degree, AcademicPeriod } from "@lib/types/enrollment";

interface Props {
  students: Student[];
  degrees: Degree[];
  academicPeriods: AcademicPeriod[];
}

const { students, degrees, academicPeriods } = Astro.props;
---

<dialog
  id="enrollment-sideover"
  class="fixed inset-y-0 right-0 m-0 h-screen w-full max-w-lg translate-x-full overflow-hidden border-none bg-white p-0 shadow-2xl transition-all duration-300 ease-in-out backdrop:backdrop-blur-sm open:translate-x-0"
>
  <style>
    dialog#enrollment-sideover {
      display: flex;
      flex-direction: column;
      margin-right: 0;
      margin-left: auto;
      max-height: none;
      height: 100dvh;
    }

    dialog::backdrop {
      background-color: rgba(0, 0, 0, 0);
      transition: all 0.3s allow-discrete;
    }

    dialog[open]::backdrop {
      background-color: rgba(0, 0, 0, 0.4);
    }

    @starting-style {
      dialog[open] {
        transform: translateX(100%);
      }
      dialog[open]::backdrop {
        background-color: rgba(0, 0, 0, 0);
      }
    }
  </style>

  <div
    class="from-rayito-blue to-rayito-sky flex shrink-0 items-center justify-between bg-linear-to-br p-8 text-white"
  >
    <div>
      <h3 class="text-2xl font-bold">Registrar Nueva Matrícula</h3>
      <p class="mt-1 text-sm text-white/80">
        Asigna un estudiante a un grado y período académico
      </p>
    </div>
    <button
      onclick="document.getElementById('enrollment-sideover').close()"
      class="flex h-10 w-10 items-center justify-center rounded-full text-2xl transition-colors hover:bg-white/10"
      aria-label="Cerrar"
    >
      ×
    </button>
  </div>

  <form
    method="POST"
    action="/api/v1/core/POST/matriculas"
    enctype="multipart/form-data"
    class="flex-1 space-y-6 overflow-y-auto bg-white p-8"
  >
    <div class="space-y-4">
      <h4
        class="text-rayito-blue border-b border-gray-50 pb-2 text-sm font-bold tracking-widest uppercase"
      >
        Datos de la Matrícula
      </h4>

      <div class="space-y-1.5">
        <label
          class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
        >
          Estudiante
        </label>
        <select
          name="student"
          required
          class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
        >
          <option value="" disabled selected>Selecciona un estudiante</option>
          {
            students.map((student) => (
              <option value={student.documentId}>
                {student.names} {student.surnames} ({student.dni})
              </option>
            ))
          }
        </select>
      </div>

      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >
            Grado y Sección
          </label>
          <select
            name="degree"
            required
            class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
          >
            <option value="" disabled selected>Selecciona grado</option>
            {
              degrees.map((degree) => (
                <option value={degree.documentId}>
                  {degree.name} - {degree.section}
                </option>
              ))
            }
          </select>
        </div>

        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >
            Período Académico
          </label>
          <select
            name="academic_period"
            required
            class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
          >
            <option value="" disabled selected>Selecciona período</option>
            {
              academicPeriods.map((period) => (
                <option value={period.documentId} selected={period.active}>
                  {period.name} {period.active ? "(Actual)" : ""}
                </option>
              ))
            }
          </select>
        </div>
      </div>

      <div class="space-y-1.5">
        <label
          class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
        >
          Estado Inicial
        </label>
        <select
          name="enrollment_status"
          required
          class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
        >
          <option value="Pendiente" selected>Pendiente</option>
          <option value="Aprobado">Aprobado</option>
          <option value="Rechazado">Rechazado</option>
          <option value="Pagado">Pagado</option>
        </select>
      </div>

      <div class="space-y-1.5">
        <label
          class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
        >
          Fecha de Matrícula
        </label>
        <input
          type="datetime-local"
          name="enrollment_date"
          required
          class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
        />
      </div>

      <div class="space-y-1.5">
        <label
          class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
        >
          Observaciones
        </label>
        <textarea
          name="observations"
          rows="3"
          class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full resize-none rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
          placeholder="Notas adicionales sobre el proceso..."></textarea>
      </div>
    </div>

    <div
      class="sticky bottom-0 flex gap-4 border-t border-gray-50 bg-white pt-8"
    >
      <button
        type="button"
        onclick="document.getElementById('enrollment-sideover').close()"
        class="flex-1 rounded-xl border border-gray-200 px-6 py-3.5 font-bold text-gray-600 transition-all hover:bg-gray-50"
      >
        Cancelar
      </button>
      <button
        type="submit"
        class="bg-rayito-blue hover:bg-rayito-sky shadow-rayito-blue/20 flex-2 rounded-xl px-6 py-3.5 font-bold text-white shadow-lg transition-all"
      >
        Registrar Matrícula
      </button>
    </div>
  </form>
</dialog>

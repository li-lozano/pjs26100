---
interface Props {
  title: string;
  subtitle: string;
  buttonText: string;
  sideOverId: string;
}

const { title, subtitle, buttonText, sideOverId } = Astro.props;
---

<div
  class="flex flex-col md:flex-row md:items-center justify-between gap-4 py-4"
>
  <div class="space-y-1">
    <h2 class="text-3xl font-extrabold text-gray-900 tracking-tight">
      {title}
    </h2>
    <p class="text-gray-500 font-medium">{subtitle}</p>
  </div>
  <button
    onclick={`document.getElementById('${sideOverId}').showModal()`}
    class="relative group overflow-hidden bg-rayito-blue text-white px-8 py-3 rounded-2xl font-bold hover:shadow-xl hover:shadow-rayito-blue/30 transition-all duration-300 flex items-center justify-center gap-2"
  >
    <div
      class="absolute inset-0 bg-gradient-to-r from-rayito-sky to-rayito-blue opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    >
    </div>
    <span class="relative z-10 flex items-center gap-2">
      <span class="text-lg">âž•</span>
      {buttonText}
    </span>
  </button>
</div>

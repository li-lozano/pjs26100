---
import type { Degree } from "@lib/types/enrollment";

interface Props {
  degrees: Degree[];
}

const { degrees } = Astro.props;
---

<div
  class="overflow-hidden rounded-3xl border border-white/20 bg-white/40 shadow-xl shadow-gray-200/50 backdrop-blur-md"
>
  <table class="w-full border-collapse text-left">
    <thead>
      <tr class="border-b border-gray-100 bg-gray-50/50">
        <th
          class="px-6 py-5 text-xs font-bold tracking-widest text-gray-400 uppercase"
          >Grado</th
        >
        <th
          class="px-6 py-5 text-center text-xs font-bold tracking-widest text-gray-400 uppercase"
          >Secci√≥n</th
        >
        <th
          class="px-6 py-5 text-center text-xs font-bold tracking-widest text-gray-400 uppercase"
          >Capacidad</th
        >
        <th
          class="px-6 py-5 text-center text-xs font-bold tracking-widest text-gray-400 uppercase"
          >Acciones</th
        >
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100/50">
      {
        degrees.length === 0 ? (
          <tr>
            <td colspan="4" class="px-6 py-20 text-center">
              <div class="flex flex-col items-center gap-3">
                <span class="text-4xl opacity-50">üè´</span>
                <p class="font-medium text-gray-400">
                  No hay grados registrados
                </p>
              </div>
            </td>
          </tr>
        ) : (
          degrees.map((degree) => (
            <tr class="group transition-colors duration-200 hover:bg-gray-50/80">
              <td class="px-6 py-4">
                <span class="group-hover:text-rayito-blue text-base font-semibold text-gray-800 transition-colors">
                  {degree.name}
                </span>
              </td>
              <td class="px-6 py-4 text-center">
                <span class="bg-rayito-blue/5 text-rayito-blue rounded-lg px-3 py-1 text-sm font-bold">
                  {degree.section}
                </span>
              </td>
              <td class="px-6 py-4 text-center">
                <div class="flex items-center justify-center gap-2">
                  <span class="font-medium text-gray-500">
                    {degree.capacity}
                  </span>
                  <span class="text-xs text-gray-400">estudiantes</span>
                </div>
              </td>
              <td class="px-6 py-4 text-center">
                <button class="hover:text-rayito-blue hover:bg-rayito-blue/5 rounded-lg p-2 text-gray-400 transition-colors">
                  <span class="text-lg">‚öôÔ∏è</span>
                </button>
              </td>
            </tr>
          ))
        )
      }
    </tbody>
  </table>
</div>

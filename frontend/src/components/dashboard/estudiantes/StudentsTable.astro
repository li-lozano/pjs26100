---
import type { Student } from "@lib/types/student";
import StudentsTableRow from "./StudentsTableRow.astro";

interface Props {
  students: Student[];
  error?: string;
}

const { students, error } = Astro.props;
---

<div
  class="overflow-hidden rounded-2xl border border-white/40 bg-white/40 shadow-sm backdrop-blur-sm"
>
  {
    error && (
      <div class="bg-red-50/50 p-8 text-center">
        <p class="font-medium text-red-500">‚ö†Ô∏è {error}</p>
      </div>
    )
  }

  {
    !error && students.length === 0 ? (
      <div class="p-16 text-center">
        <div class="bg-rayito-blue/10 mx-auto mb-4 flex h-20 w-20 items-center justify-center rounded-full text-4xl">
          üéì
        </div>
        <h3 class="text-lg font-bold text-gray-800">
          No hay estudiantes registrados
        </h3>
        <p class="mx-auto mt-2 max-w-xs text-sm leading-relaxed text-gray-500">
          Comienza por a√±adir a tu primer estudiante para gestionar su proceso
          acad√©mico.
        </p>
        <button class="text-rayito-blue mt-6 text-sm font-bold hover:underline">
          A√±adir ahora
        </button>
      </div>
    ) : (
      !error && (
        <div class="overflow-x-auto">
          <table class="w-full border-collapse text-left">
            <thead>
              <tr class="border-b border-gray-100 bg-gray-50/50">
                <th class="hidden px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase md:table-cell">
                  DNI
                </th>
                <th class="px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase">
                  Estudiante
                </th>
                <th class="hidden px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase md:table-cell">
                  Estado
                </th>
                <th class="hidden px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase md:table-cell">
                  Cumplea√±os
                </th>
                <th class="hidden px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase md:table-cell">
                  Tutor
                </th>
                <th class="px-6 py-4 text-right text-xs font-bold tracking-wider text-gray-500 uppercase">
                  Acciones
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-50">
              {students.map((student) => (
                <StudentsTableRow student={student} />
              ))}
            </tbody>
          </table>
        </div>
      )
    )
  }
</div>

<style>
  /* Custom scrollbar for table */
  .overflow-x-auto::-webkit-scrollbar {
    height: 6px;
  }
  .overflow-x-auto::-webkit-scrollbar-track {
    background: transparent;
  }
  .overflow-x-auto::-webkit-scrollbar-thumb {
    background: #e5e7eb;
    border-radius: 10px;
  }
  .overflow-x-auto::-webkit-scrollbar-thumb:hover {
    background: #d1d5db;
  }
</style>

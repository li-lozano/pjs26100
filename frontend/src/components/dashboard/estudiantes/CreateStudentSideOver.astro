---
import ReadTutors from "@lib/services/private/ReadTutors";
import type { User } from "@lib/types/user";

const { token, user } = Astro.locals;
let tutors: User[] = [];

try {
  tutors = await ReadTutors(token as string);
} catch (error) {
  console.error("Error fetching tutors in CreateStudentSideOver:", error);
  // Si falla la carga de tutores (probablemente por permisos del rol Tutor)
  // y el usuario actual es un Tutor, lo añadimos a él mismo como única opción
  if (user && user.role?.name === "Tutor") {
    tutors = [user as User];
  }
}
---

<dialog
  id="student-sideover"
  class="fixed inset-y-0 right-0 h-screen w-full max-w-lg m-0 p-0 border-none shadow-2xl backdrop:backdrop-blur-sm overflow-hidden transition-all duration-300 ease-in-out translate-x-full open:translate-x-0 bg-white"
>
  <style>
    /* Transición suave para el backdrop y el diálogo */
    dialog#student-sideover {
      display: flex;
      flex-direction: column;
      margin-right: 0;
      margin-left: auto;
      max-height: none;
      height: 100dvh;
    }

    dialog::backdrop {
      background-color: rgba(0, 0, 0, 0);
      transition: all 0.3s allow-discrete;
    }

    dialog[open]::backdrop {
      background-color: rgba(0, 0, 0, 0.4);
    }

    @starting-style {
      dialog[open] {
        transform: translateX(100%);
      }
      dialog[open]::backdrop {
        background-color: rgba(0, 0, 0, 0);
      }
    }
  </style>

  <div
    class="bg-linear-to-br from-rayito-blue to-rayito-sky p-8 text-white flex justify-between items-center shrink-0"
  >
    <div>
      <h3 class="text-2xl font-bold">Registrar Nuevo Estudiante</h3>
      <p class="text-white/80 text-sm mt-1">
        Completa los datos académicos del alumno
      </p>
    </div>
    <button
      onclick="document.getElementById('student-sideover').close()"
      class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-white/10 transition-colors text-2xl"
      aria-label="Cerrar"
    >
      ×
    </button>
  </div>

  <form method="POST" action="/api/v1/core/estudiantes" class="flex-1 overflow-y-auto p-8 space-y-6 bg-white">
    <div class="space-y-4">
      <h4
        class="text-sm font-bold text-rayito-blue uppercase tracking-widest border-b border-gray-50 pb-2"
      >
        Información Personal
      </h4>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-1.5">
          <label
            class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
            >Nombres</label
          >
          <input
            type="text"
            name="names"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
            placeholder="Ej: Ana Maria"
          />
        </div>
        <div class="space-y-1.5">
          <label
            class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
            >Apellidos</label
          >
          <input
            type="text"
            name="surnames"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
            placeholder="Ej: García López"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-1.5">
          <label
            class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
            >DNI</label
          >
          <input
            type="text"
            name="dni"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
            placeholder="8 dígitos"
          />
        </div>
        <div class="space-y-1.5">
          <label
            class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
            >F. Nacimiento</label
          >
          <input
            type="date"
            name="birthday"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-1.5">
          <label
            class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
            >Género</label
          >
          <select
            name="gender"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800 appearance-none bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20fill%3D%22none%22%20viewBox%3D%220%200%2020%2020%22%3E%3Cpath%20stroke%3D%22%236b7280%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%20stroke-width%3D%221.5%22%20d%3D%22m6%208%204%204%204-4%22%2F%3E%3C%2Fsvg%3E')] bg-size-[1.25rem_1.25rem] bg-position-[right_0.5rem_center] bg-no-repeat"
          >
            <option value="" disabled selected>Seleccionar</option>
            <option value="Masculino">Masculino</option>
            <option value="Femenino">Femenino</option>
            <option value="Otro">Otro</option>
          </select>
        </div>
        <div class="space-y-1.5">
          <label
            class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
            >Dirección</label
          >
          <input
            type="text"
            name="address"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
            placeholder="Ej: Av. Las Flores 123"
          />
        </div>
      </div>

      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-400 uppercase tracking-wider ml-1"
          >Tutor / Responsable</label
        >
        <select
          name="profile"
          class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800 appearance-none bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20fill%3D%22none%22%20viewBox%3D%220%200%2020%2020%22%3E%3Cpath%20stroke%3D%22%236b7280%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%20stroke-width%3D%221.5%22%20d%3D%22m6%208%204%204%204-4%22%2F%3E%3C%2Fsvg%3E')] bg-size-[1.25rem_1.25rem] bg-position-[right_0.5rem_center] bg-no-repeat"
        >
          <option value="">Sin tutor asignado (Opcional)</option>
          {tutors.map((tutor) => (
            <option value={tutor.profile?.documentId}>
              {tutor.profile?.names} {tutor.profile?.surnames} ({tutor.profile?.dni})
            </option>
          ))}
        </select>
      </div>
    </div>

    <div
      class="pt-8 border-t border-gray-50 flex gap-4 sticky bottom-0 bg-white"
    >
      <button
        type="button"
        onclick="document.getElementById('student-sideover').close()"
        class="flex-1 px-6 py-3.5 rounded-xl border border-gray-200 text-gray-600 font-bold hover:bg-gray-50 transition-all"
      >
        Cancelar
      </button>
      <button
        type="submit"
        class="flex-2 px-6 py-3.5 rounded-xl bg-rayito-blue text-white font-bold hover:bg-rayito-sky transition-all shadow-lg shadow-rayito-blue/20"
      >
        Guardar Estudiante
      </button>
    </div>
  </form>
</dialog>

---
import ReadTutors from "@lib/services/private/ReadTutors";
import type { User } from "@lib/types/user";

const { token, user } = Astro.locals;
let tutors: User[] = [];

try {
  tutors = await ReadTutors(token as string);
} catch (error) {
  console.error("Error fetching tutors in CreateStudentSideOver:", error);
  // Si falla la carga de tutores (probablemente por permisos del rol Tutor)
  // y el usuario actual es un Tutor, lo añadimos a él mismo como única opción
  if (user && user.role?.name === "Tutor") {
    tutors = [user as User];
  }
}
---

<dialog
  id="student-sideover"
  class="fixed inset-y-0 right-0 m-0 h-screen w-full max-w-lg translate-x-full overflow-hidden border-none bg-white p-0 shadow-2xl transition-all duration-300 ease-in-out backdrop:backdrop-blur-sm open:translate-x-0"
>
  <style>
    /* Transición suave para el backdrop y el diálogo */
    dialog#student-sideover {
      display: flex;
      flex-direction: column;
      margin-right: 0;
      margin-left: auto;
      max-height: none;
      height: 100dvh;
    }

    dialog::backdrop {
      background-color: rgba(0, 0, 0, 0);
      transition: all 0.3s allow-discrete;
    }

    dialog[open]::backdrop {
      background-color: rgba(0, 0, 0, 0.4);
    }

    @starting-style {
      dialog[open] {
        transform: translateX(100%);
      }
      dialog[open]::backdrop {
        background-color: rgba(0, 0, 0, 0);
      }
    }
  </style>

  <div
    class="from-rayito-blue to-rayito-sky flex shrink-0 items-center justify-between bg-linear-to-br p-8 text-white"
  >
    <div>
      <h3 class="text-2xl font-bold">Registrar Nuevo Estudiante</h3>
      <p class="mt-1 text-sm text-white/80">
        Completa los datos académicos del alumno
      </p>
    </div>
    <button
      onclick="document.getElementById('student-sideover').close()"
      class="flex h-10 w-10 items-center justify-center rounded-full text-2xl transition-colors hover:bg-white/10"
      aria-label="Cerrar"
    >
      ×
    </button>
  </div>

  <form
    method="POST"
    action="/api/v1/core/POST/estudiantes"
    class="flex-1 space-y-6 overflow-y-auto bg-white p-8"
  >
    <div class="space-y-4">
      <h4
        class="text-rayito-blue border-b border-gray-50 pb-2 text-sm font-bold tracking-widest uppercase"
      >
        Información Personal
      </h4>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
            >Nombres</label
          >
          <input
            type="text"
            name="names"
            required
            class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
            placeholder="Ej: Ana Maria"
          />
        </div>
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
            >Apellidos</label
          >
          <input
            type="text"
            name="surnames"
            required
            class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
            placeholder="Ej: García López"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
            >DNI</label
          >
          <input
            type="text"
            name="dni"
            required
            class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
            placeholder="8 dígitos"
          />
        </div>
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
            >F. Nacimiento</label
          >
          <input
            type="date"
            name="birthday"
            required
            class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
          />
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
            >Género</label
          >
          <select
            name="gender"
            required
            class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full appearance-none rounded-xl border border-gray-100 bg-gray-50 bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20fill%3D%22none%22%20viewBox%3D%220%200%2020%2020%22%3E%3Cpath%20stroke%3D%22%236b7280%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%20stroke-width%3D%221.5%22%20d%3D%22m6%208%204%204%204-4%22%2F%3E%3C%2Fsvg%3E')] bg-size-[1.25rem_1.25rem] bg-position-[right_0.5rem_center] bg-no-repeat px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
          >
            <option value="" disabled selected>Seleccionar</option>
            <option value="Masculino">Masculino</option>
            <option value="Femenino">Femenino</option>
            <option value="Otro">Otro</option>
          </select>
        </div>
        <div class="space-y-1.5">
          <label
            class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
            >Dirección</label
          >
          <input
            type="text"
            name="address"
            required
            class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full rounded-xl border border-gray-100 bg-gray-50 px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
            placeholder="Ej: Av. Las Flores 123"
          />
        </div>
      </div>

      <div class="space-y-1.5">
        <label
          class="ml-1 text-xs font-bold tracking-wider text-gray-400 uppercase"
          >Tutor / Responsable</label
        >
        <select
          name="profile"
          class="focus:ring-rayito-blue/20 focus:border-rayito-blue w-full appearance-none rounded-xl border border-gray-100 bg-gray-50 bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20fill%3D%22none%22%20viewBox%3D%220%200%2020%2020%22%3E%3Cpath%20stroke%3D%22%236b7280%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%20stroke-width%3D%221.5%22%20d%3D%22m6%208%204%204%204-4%22%2F%3E%3C%2Fsvg%3E')] bg-size-[1.25rem_1.25rem] bg-position-[right_0.5rem_center] bg-no-repeat px-4 py-3 text-gray-800 transition-all outline-none focus:bg-white focus:ring-2"
        >
          <option value="">Sin tutor asignado (Opcional)</option>
          {
            tutors.map((tutor) => (
              <option value={tutor.profile?.documentId}>
                {tutor.profile?.names} {tutor.profile?.surnames} (
                {tutor.profile?.dni})
              </option>
            ))
          }
        </select>
      </div>
    </div>

    <div
      class="sticky bottom-0 flex gap-4 border-t border-gray-50 bg-white pt-8"
    >
      <button
        type="button"
        onclick="document.getElementById('student-sideover').close()"
        class="flex-1 rounded-xl border border-gray-200 px-6 py-3.5 font-bold text-gray-600 transition-all hover:bg-gray-50"
      >
        Cancelar
      </button>
      <button
        type="submit"
        class="bg-rayito-blue hover:bg-rayito-sky shadow-rayito-blue/20 flex-2 rounded-xl px-6 py-3.5 font-bold text-white shadow-lg transition-all"
      >
        Guardar Estudiante
      </button>
    </div>
  </form>
</dialog>

---
import type { User } from "@lib/types/user";
import TutorsTableRow from "./TutorsTableRow.astro";

interface Props {
  tutors: User[];
}

const { tutors } = Astro.props;
---

<div
  class="overflow-hidden rounded-2xl border border-gray-100 bg-white/60 shadow-sm backdrop-blur-md"
>
  <div class="overflow-x-auto">
    <table class="w-full border-collapse text-left">
      <thead>
        <tr class="bg-gray-50/50">
          <th
            class="hidden border-b border-gray-100 px-6 py-4 text-sm font-bold text-gray-600 md:table-cell"
            >DNI</th
          >
          <th
            class="border-b border-gray-100 px-6 py-4 text-sm font-bold text-gray-600"
            >Nombre Completo</th
          >
          <th
            class="hidden border-b border-gray-100 px-6 py-4 text-sm font-bold text-gray-600 md:table-cell"
            >Teléfono</th
          >
          <th
            class="hidden border-b border-gray-100 px-6 py-4 text-sm font-bold text-gray-600 md:table-cell"
            >Email</th
          >
          <th
            class="hidden border-b border-gray-100 px-6 py-4 text-sm font-bold text-gray-600 md:table-cell"
            >Alumnos</th
          >
          <th
            class="border-b border-gray-100 px-6 py-4 text-sm font-bold text-gray-600"
            >Acciones</th
          >
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        {
          tutors.length === 0 ? (
            <tr>
              <td
                colspan="6"
                class="px-6 py-12 text-center text-gray-500 italic"
              >
                No hay tutores registrados aún.
              </td>
            </tr>
          ) : (
            tutors.map((tutor) => <TutorsTableRow tutor={tutor} />)
          )
        }
      </tbody>
    </table>
  </div>
</div>

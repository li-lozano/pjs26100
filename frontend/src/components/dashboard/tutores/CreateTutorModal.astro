---

<dialog
  id="tutor-modal"
  class="rounded-3xl p-0 shadow-2xl backdrop:backdrop-blur-sm overflow-hidden border-none w-full max-w-lg"
>
  <div
    class="bg-linear-to-br from-rayito-blue to-rayito-sky p-6 text-white flex justify-between items-center"
  >
    <h3 class="text-xl font-bold">Registrar Nuevo Tutor</h3>
    <button
      onclick="document.getElementById('tutor-modal').close()"
      class="text-white/80 hover:text-white text-2xl">×</button
    >
  </div>

  <form method="POST" class="p-8 space-y-5 bg-white">
    <div class="grid grid-cols-2 gap-4">
      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1"
          >Nombres</label
        >
        <input
          type="text"
          name="names"
          required
          class="w-full px-4 py-2.5 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
          placeholder="Ej: Juan"
        />
      </div>
      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1"
          >Apellidos</label
        >
        <input
          type="text"
          name="surnames"
          required
          class="w-full px-4 py-2.5 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
          placeholder="Ej: Perez"
        />
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1"
          >DNI</label
        >
        <input
          type="text"
          name="dni"
          required
          class="w-full px-4 py-2.5 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
          placeholder="8 dígitos"
        />
      </div>
      <div class="space-y-1.5">
        <label
          class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1"
          >Teléfono</label
        >
        <input
          type="text"
          name="cell_phone"
          required
          class="w-full px-4 py-2.5 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
          placeholder="Ej: 987654321"
        />
      </div>
    </div>

    <div class="space-y-1.5">
      <label
        class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1"
        >Email</label
      >
      <input
        type="email"
        name="email"
        required
        class="w-full px-4 py-2.5 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
        placeholder="juan.perez@email.com"
      />
    </div>

    <div class="space-y-1.5">
      <label
        class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-1"
        >Usuario (Username)</label
      >
      <input
        type="text"
        name="username"
        required
        class="w-full px-4 py-2.5 rounded-xl border border-gray-100 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-rayito-blue/20 focus:border-rayito-blue transition-all outline-none text-gray-800"
        placeholder="Ej: jperez"
      />
    </div>

    <div class="pt-4 flex gap-3">
      <button
        type="button"
        onclick="document.getElementById('tutor-modal').close()"
        class="flex-1 px-6 py-3 rounded-xl border border-gray-200 text-gray-600 font-bold hover:bg-gray-50 transition-all"
        >Cancelar</button
      >
      <button
        type="submit"
        class="flex-2 px-6 py-3 rounded-xl bg-rayito-blue text-white font-bold hover:bg-rayito-sky transition-all shadow-lg shadow-rayito-blue/20"
        >Guardar Tutor</button
      >
    </div>
  </form>
</dialog>
